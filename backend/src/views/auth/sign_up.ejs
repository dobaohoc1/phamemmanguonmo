<%- include('../component/header') %>
  <%- include('../component/navbar') %>
    <div class="container mx-auto p-4 md:p-6 lg:p-6 bg-[#DAD3BE] rounded-md">
      <form id="signup" class="flex flex-col gap-4">
        <h1 class="text-2xl font-bold text-center">Đăng Ký</h1>
        <label for="inputUsername" class="block text-sm font-medium text-gray-700">Username</label>
        <input type="text" name="username" id="inputUsername" placeholder="Username" required
          class="w-full p-2 text-sm text-gray-700" />
        <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" name="email" id="inputEmail" placeholder="Email address" required
          class="w-full p-2 text-sm text-gray-700" />
        <label for="inputPassword" class="block text-sm font-medium text-gray-700">Mật Khẩu</label>
        <input type="password" minlength="6" name="password" id="inputPassword" placeholder="Password" required
          class="w-full p-2 text-sm text-gray-700" />
        <label for="inputConfirmPassword" class="block text-sm font-medium text-gray-700">Nhập Lại Mật Khẩu</label>
        <input type="password" minlength="6" name="confirmPassword" id="inputConfirmPassword"
          placeholder="Confirm Password" required class="w-full p-2 text-sm text-gray-700" />
        <button type="submit" class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded">Đăng
          Ký</button>
        <p class="text-sm text-gray-600">Bạn đã có tài khoản ? <a href="/auth/signin"
            class="text-orange-500 hover:text-orange-700">Đăng nhập</a></p>
      </form>
    </div>
    <%- include('../component/footer') %>