<%- include('../component/header') %>
  <%- include('../component/navbar') %>
    <div class="container mx-auto p-4 md:p-6 lg:p-6 bg-[#DAD3BE] rounded-md mb-6">
      <form id="signin" class="flex flex-col gap-6">
        <h1 class="text-2xl font-bold text-center">Đăng Nhập</h1>
        <label for="inputEmail" class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" id="inputEmail" name="email" placeholder="Email address" required autofocus
          class="w-full p-2 text-sm text-gray-700" />
        <label for="inputPassword" class="block text-sm font-medium text-gray-700">Mật Khẩu</label>
        <input type="password" name="password" id="inputPassword" placeholder="Password" required
          class="w-full p-2 text-sm text-gray-700" />
        <div class="flex items-center">
          <input type="checkbox" value="remember-me" id="remember-me" class="mr-2" />
          <label for="remember-me" class="text-sm text-gray-700">Ghi nhớ đăng nhập</label>
        </div>
        <button type="submit" class="bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded">Đăng
          nhập</button>
        <p class="text-sm text-gray-600">Bạn chưa có tài khoản ? <a href="/auth/signup"
            class="text-orange-500 hover:text-orange-700">Đăng Ký</a></p>
      </form>
    </div>
    <%- include('../component/footer') %>